<!--Sign in stuff-->
<header class="mdc-top-app-bar mdc-top-app-bar--fixed" style="position:fixed">
    <div class="mdc-top-app-bar__row">
        <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
            {{!-- <button class="material-icons mdc-top-app-bar__navigation-icon mdc-icon-button"
                    aria-label="Open navigation menu">menu</button> --}}
            <span><img
                    src="https://www.pinclipart.com/picdir/middle/273-2734486_book-icon-creative-commons-png-download-clipart.png"
                    style="width:50px; height:auto"></span>
            <span class="mdc-top-app-bar__title" title="Home">Bookshelf</span>
        </section>

        <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end" role="toolbar">
            <button class="theme-nav material-icons mdc-top-app-bar__action-item mdc-icon-button" aria-label="Theme"
                title="Dark Mode">brightness_2</button>

            <button class="signout-nav material-icons mdc-top-app-bar__action-item mdc-icon-button" aria-label="Signout"
                title="Logout">home</button>
        </section>
    </div>
</header>

<div id="login-section" style="visibility:hidden">
    <div class="mdc-card" id="sign-form" style="max-width:600px; margin-left:auto; margin-right:auto; padding:16px;">

        <!-- Username -->
        <h3>Filler</h3>
        <h2 style="text-align:center">Get Started With Bookshelf!</h2>
        <h4>Username</h4>
        <label class="mdc-text-field mdc-text-field--outlined">
            <input type="text" class="mdc-text-field__input" id="user-input" aria-labelledby="my-label-id">
            <span class="mdc-notched-outline">
                <span class="mdc-notched-outline__leading"></span>
                <span class="mdc-notched-outline__notch">
                    <span class="mdc-floating-label active"></span>
                </span>
                <span class="mdc-notched-outline__trailing"></span>
            </span>
        </label>

        <!-- Password -->
        <h4>Password</h4>
        <label class="mdc-text-field mdc-text-field--outlined">
            <input type="text" class="mdc-text-field__input" id="password-input" aria-labelledby="my-label-id">
            <span class="mdc-notched-outline">
                <span class="mdc-notched-outline__leading"></span>
                <span class="mdc-notched-outline__notch">
                    <span class="mdc-floating-label active"></span>
                </span>
                <span class="mdc-notched-outline__trailing"></span>
            </span>
        </label>

        <div class="mdc-touch-target-wrapper" style="margin:auto">
            <!-- Sign up button-->
            <button class="mdc-button mdc-button--touch" id="signUpButton">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">Sign Up</span>
                <div class="mdc-button__touch"></div>
            </button>

            <!-- Sign in button-->
            <button class="mdc-button mdc-button--touch" id="loginButton">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">Sign In</span>
                <div class="mdc-button__touch"></div>
            </button>
        </div>
    </div>

    <p id="signin-message"></p>

</div>
<!-- Results page -->