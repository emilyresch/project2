                    <div class="mdc-notched-outline__notch">
                        <label for="text-field-hero-input" class="mdc-floating-label">Search Book</label>
                    </div>
                    <div class="mdc-notched-outline__trailing"></div>
                </div>
            </div>

            <button class="searchbutton material-icons mdc-top-app-bar__action-item mdc-icon-button"
                aria-label="Search">search</button> --}}

            <button class="wishlist-nav material-icons mdc-top-app-bar__action-item mdc-icon-button"
                aria-label="Wishlist">star</button>

            <button class="profile-nav material-icons mdc-top-app-bar__action-item mdc-icon-button"
                aria-label="Account Circle">account_circle</button>

        </section>
    </div>
</header>

<div class="mdc-data-table table2" style="width:50%; margin-left:25%; margin-right:25%">
    <table class="mdc-data-table__table" aria-label="completed books">
        <thead>
            <tr class="mdc-data-table__header-row">
                <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Title</th>
                <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Author</th>
                <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Update Read Status</th>
            </tr>
        </thead>
        <tbody class="mdc-data-table__content">
            <h3>filler</h3>
            <h2 style="text-align:center">Completed Books</h2>
            {{#each Book }}
            {{#if dataValues.have_read }}  
            <tr class="mdc-data-table__row">
                <td class="mdc-data-table__cell">{{dataValues.title}}</td>
                <td class="mdc-data-table__cell">{{dataValues.author}}</td>
                <td class="mdc-data-table__cell"><button type="button" class="update-unread-btn" 
                data-id="{{dataValues.id}}" data-readstatus="{{unread}}">Haven't Read Yet!</button></td>   
            </tr>
            {{/if}}
            {{/each }}
        </tbody>
    </table>
</div>